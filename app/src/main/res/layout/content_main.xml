<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.carlos.nominapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tvSalarioBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Salario Base: "
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRetribuciones" />

    <TextView
        android:id="@+id/tvRetribuciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="RETRIBUCIONES"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSalarioBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSalarioBase"
        app:layout_constraintTop_toBottomOf="@+id/tvRetribuciones"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/tvSalarioBase"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/tvEuro"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/tvEuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="€/mes"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRetribuciones" />

    <TextView
        android:id="@+id/tvEuroAntiguedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="€/mes"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPluses" />

    <TextView
        android:id="@+id/tvPluses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pluses"
        android:textStyle="bold"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSalarioBase" />

    <CheckBox
        android:id="@+id/cbAntiguedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plus de Antiguedad"
        android:textStyle="italic"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPluses" />

    <EditText
        android:id="@+id/etAntiguedad"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/cbAntiguedad"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPluses"
        app:layout_constraintVertical_bias="0.473"
        app:layout_constraintLeft_toRightOf="@+id/cbAntiguedad"
        android:layout_marginLeft="8dp" />

    <CheckBox
        android:id="@+id/cbConvenio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plus de Convenio"
        android:textStyle="italic"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cbAntiguedad" />

    <EditText
        android:id="@+id/etConvenio"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/cbConvenio"
        android:layout_marginBottom="-54dp"
        app:layout_constraintLeft_toRightOf="@+id/cbConvenio"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etAntiguedad"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tvEuroConveio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="€/mes"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEuroAntiguedad" />

</android.support.constraint.ConstraintLayout>
